<%= form_with model: [@post] do |form| %>
  <% @post.errors.full_messages.each do |error| %>
    <div><%= error %></div>
  <% end %>
  
  <div>
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>

  <div>
    <%= form.label :text%>
    <%= form.text_area :text%>
  </div>

  <%= form.submit %>
<% end %>